{
  "manifest_version": 3,
  "name": "Readwise Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension for enhancing your Readwise experience",
  "permissions": [
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://readwise.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}